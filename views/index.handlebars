<div class="container">
  <div class="row">
    <ul class="col-6 border border-left-0 border-top-0 border-bottom-0 border-solid" id="burger-menu">
      <label for="menuLaber">
        <h3 class="text-danger text-uppercase">Choose from our menu!</h3>
      </label>
      <hr> {{#each burgers}} {{#unless devoured}}
      <li class="list-group-item border-0">
        <div class="row">
          <div class="col-6 text-left text-danger">{{burger_name}}</div>
          <button data-id="{{id}}" class="devoureBurger col-6 btn btn-outline-danger ">Order!</button>
        </div>
      </li>
      {{/unless}}{{/each}}
    </ul>

    <div class="col-6 pl-5">
      <form class="needs-validation" novalidate>
        <div class="">
          <label for="burgerName">
            <h5 class="text-muted">Your burger is not on our menu? No problem, add your burger and we will prepare it for you!</h5>
          </label>
          <input type="text" class="form-control mb-3" id="burgerName" placeholder="" value="" required>
          <div class="invalid-feedback mb-3">
            Valid burger name is required.
          </div>

          <!-- Submit Button -->
          <button type="submit" class="btn btn-danger btn-lg" id="submit">
            Add my Burger!</button>
      </form>

      <hr>

      <ul class="col-6 pl-0 pr-0" id="burger-order">
        {{#each burgers}} {{#if devoured}}
        <li class="list-group-item">
          <div class="row">
            <div class="text-center text-muted">
              <s>{{burger_name}}</s>
            </div>
          </div>
        </li>
        {{/if}} {{/each}}
      </ul>

      </div>
    </div>
  </div>