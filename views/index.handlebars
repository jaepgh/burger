<div class="container">
  <ul class="col-6" id="burger-menu">
    {{#each burgers}}
    <li class="list-group-item">
      <div class="row">
        <div class="col-6 text-left text-primary">{{burger_name}}</div>
          <button data-id="{{id}}" class="delcat col-6 btn btn-outline-primary ">Order!</button>
      </div>
    </li>
    {{/each}}
  </ul>
  <ul class="col-6" id="burger-order">

  </ul>
</div>

